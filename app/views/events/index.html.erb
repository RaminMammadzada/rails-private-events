<p id="notice"><%= notice %></p>

<h1>Past Events</h1>

<table>
  <thead>
    <tr>
      <th>Event Creator</th>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @past_events = Event.past.all %>
    <% @past_events.each do |event| %>
      <tr>
        <td><%= event.creator.name %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <%= display_join(current_user, event)%>



        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <%= creator_destroy(current_user, event)%>
      </tr>
    <% end %>
  </tbody>
</table>

