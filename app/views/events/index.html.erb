<p id="notice"><%= notice %></p>

<h1>Past Events</h1>

<table>
  <thead>
    <tr>
      <th>Event Creator</th>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.past.each do |event| %>
      <tr>
        <td><%= event.creator.name %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <% if current_user.attended_events.include? event %>
          <td><%= link_to 'Unjoin', destroy_path(event_id: event.id, attendee_id: current_user.id)%></td>
        <% else %>
          <td><%= link_to 'Join', join_path(event_id: event.id)%></td>
        <% end %>



        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <% if current_user == event.creator %>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

